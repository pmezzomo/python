def passo1():
    arquivo = open('novo.txt', 'a+')

    arquivo.write('Linha 1\n')

    arquivo.write('Linha 2\n')

    arquivo.write('Linha 3\n')

    arquivo.close()


def passo2():
    arquivo = open('novo.txt', 'a+')

    arquivo.write('Linha 4\n')

    arquivo.close()


def passo3():
    arquivo = open('novo.txt', 'r+')

    arquivo.write('Linha 99\n')

    arquivo.close()

#passo1()
#passo2()
passo3()
